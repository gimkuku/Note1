<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:orientation="horizontal"
    android:background="@drawable/some_id3">

    <TextView
        android:id="@+id/how_are_you"
        android:layout_width="248dp"
        android:layout_height="64dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:text="how_are_you"
        android:textAppearance="how_are_you"
        android:textSize="45dp" />

    <ImageView
        android:src="@drawable/questionIcon_big"
        android:id="@+id/question_ic"
        android:layout_width="300dp"
        android:layout_height="300dp"
 android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:background="#00000000"

        />
    <Button
        android:layout_below="@+id/question_ic"
    android:text="I'm"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_width="136dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        />



</RelativeLayout>